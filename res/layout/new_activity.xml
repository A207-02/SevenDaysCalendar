<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".Show_Activity"
    android:id="@+id/show_FrameLayout"
    >
    
    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:paddingRight="@dimen/activity_horizontal_margin"
    	android:paddingBottom="@dimen/activity_vertical_margin"
   	 	android:orientation="vertical"
        >
		<ImageButton 
			android:id="@+id/new_return1111"
	   	 	android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/turnleft"
			android:background="#00000000"/>	
	
	<LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_x="-3dp"
        android:layout_y="9dp" 
	    >
	    <TextView
	    android:id="@+id/show_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20pt"
        android:textColor="#fff"
        android:shadowColor="#000"
        android:shadowDx="5.0"
        android:shadowDy="4.0"
        android:shadowRadius="3.0"
        />
        <TextView
        android:id="@+id/show_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20pt"
        android:textColor="#fff"
        android:shadowColor="#000"
        android:shadowDx="5.0"
        android:shadowDy="4.0"
        android:shadowRadius="3.0"
        />
        <TextView
        android:id="@+id/show_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20pt"
        android:textColor="#fff"
        android:shadowColor="#000"
        android:shadowDx="5.0"
        android:shadowDy="4.0"
        android:shadowRadius="3.0"
        />
	</LinearLayout>
    <TextView
        android:id="@+id/show_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18pt"
        android:textColor="#fff"
        android:shadowColor="#000"
        android:shadowDx="5.0"
        android:shadowDy="4.0"
        android:shadowRadius="3.0"
        android:layout_x="-1dp"
        android:layout_y="74dp" />

    <TextView
        android:id="@+id/show_numbers"
        android:layout_marginTop="100dp"
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:text="7172"
        android:textSize="40pt"
        android:textColor="#fff"
        android:shadowColor="#000"
        android:shadowDx="5.0"
        android:shadowDy="4.0"
        android:shadowRadius="3.0"
        android:layout_x="-3dp"
        android:layout_y="263dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DAYS"
        android:textSize="30pt"
        android:textColor="#fff"
        android:shadowColor="#000"
        android:shadowDx="5.0"
        android:shadowDy="4.0"
        android:shadowRadius="3.0"
        android:layout_x="-3dp"
        android:layout_y="325dp" />
        
    </LinearLayout>
    <include layout = "@layout/notification"/>	
	<com.zhy.demo_zhy_08_viewpageranim.RippleLayout
	    android:id="@+id/more2"
        android:layout_width="100dp"
        android:layout_height="100dp"    
        android:layout_gravity="bottom|center"
        android:alpha="0.9"
        ripple:rv_color="@color/rippelColor3"
        ripple:rv_inner_radius="@dimen/bookshelf_add_btn">
	    
	    <ImageButton
	        android:id="@+id/add"
            android:layout_width="60.0dip"
            android:layout_height="60.0dip"
            android:layout_centerInParent="true"            
            android:background="@drawable/selector_green_ball"
            android:contentDescription="@null"
            android:scaleType="center"
            android:src="@drawable/ic_add"/>
	</com.zhy.demo_zhy_08_viewpageranim.RippleLayout>
	
	<com.zhy.demo_zhy_08_viewpageranim.ImportMenuView
	    android:layout_gravity="bottom|center" 
		android:id="@+id/main_activity_import_menu" 
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent">
	  	
	</com.zhy.demo_zhy_08_viewpageranim.ImportMenuView>
</FrameLayout>
